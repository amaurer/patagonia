<div class="offset2"></div>
  
<div class="light-wrapper">

	<div class="container inner bp0">
		<!--<h1 class="intro text-center">{{toUpperCase title}}</h1>-->
		<!--<p class="lead main text-center">Patagonia Home specializes in the art and assembly of exotic wood furniture and stylish upholstery pieces designed for a diverse clientele base all over the world.</p>-->
	</div>
	<!-- /.container -->

	<div class="container ">
        <div class="portfolio full-portfolio">
          

		{{#each data}}
          <div class="isotope items">

			<!-- Catalog block, repeat as neccessary -->
			{{#each this}}
			<div class="item grid-sizer web pad-image">
				<figure>
					<a href="/products/{{parent}}/{{@key}}/" class="fancybox-media" data-rel="grid-portfolio" data-title-id="{{name}}">
						<div class="text-overlay">
							<div class="info"><span>{{toUpperCase @key}}</span></div>
						</div>
						{{#if mainImage}}
						<img style="object-fit:contain;" src="/public/catalog/{{parent}}/{{mainImage}}" alt="{{@key}}" />
						{{else}}
						<img style="object-fit:contain;" src="/public/catalog/{{parent}}/{{sm}}" alt="{{@key}}" />
						{{/if}}
					</a>
				</figure>
				<!-- Can be removed if not needed, @key would be the modal img and content if not linking to a product page. -->
				<div id="title-02" class="info hidden">
					<h2 class="name">{{toUpperCase @key}}</h2>
					<div class="fancybody">{{@key}}</div>
				</div> 
				<!-- /modal -->
			</div>
			{{/each}}
			<!-- /block -->

          </div>
		{{/each}}


        </div>
    </div><!-- /container -->

</div>
<!-- /light-wrapper -->